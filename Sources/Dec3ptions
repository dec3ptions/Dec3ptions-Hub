--// Dec3ptions Hub
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Lighting = game:GetService("Lighting")
local RunService = game:GetService("RunService")
local Terrain = game.workspace.Terrain

local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer.PlayerGui
local Character = LocalPlayer.Character

local Rod
for _, v in pairs(Character:GetChildren()) do
	if v:FindFirstChild("rod/server") and v:FindFirstChild("rod/client") then
		Rod = v
		print("Detected rod:", Rod.Name)
		break 
	end
end

while true do
	if not PlayerGui:FindFirstChild("shakeui") then
		Rod.events.cast:FireServer(unpack({ [1]=math.random(75, 100), [2]=2 }))
		ReplicatedStorage:WaitForChild("events"):WaitForChild("reelfinished"):FireServer(unpack({ [1]=100, [2]=true }))
	end
	wait(0.1)
end
--
